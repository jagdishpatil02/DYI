{
  "manifest_version": 2,
  "name": "another dark mode reader",
  "version": "1.0",
  "description": "another dark mode reader allows you to browse a webapp in dark mode",
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "another dark mode reader"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://peerlist.io/*"],
      "js": ["/content.js", "/custom_js_script.js"]
    }
  ],
  "permissions": ["tabs", "https://peerlist.io/*", "storage", "activeTab"]

}
